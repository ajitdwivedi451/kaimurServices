<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background1"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/loginImage"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/kamiur" />

    <TextView
        android:id="@+id/profiletextlogin"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginImage"
        android:text="Login"
        android:textColor="@color/Primary"
        android:textSize="50dp"

        android:textStyle="bold"
        android:layout_marginLeft="135dp"
        android:layout_marginTop="40dp"/>
    <EditText
        android:id="@+id/loginEnterPhone"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:hint="Enter phone number"
        android:textSize="20dp"
        android:textColor="@color/Primary"
        android:inputType="phone"
        android:textColorHint="#20101010"
        android:padding="20dp"
        android:layout_below="@+id/profiletextlogin"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/input_design"/>
    <EditText
        android:id="@+id/loginEnterPassword"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:hint="Enter Password"
        android:textSize="20dp"
        android:textColor="#0AE80A"
        android:textColorHint="#20101010"
        android:inputType="textPassword"
        android:padding="20dp"
        android:layout_below="@+id/loginEnterPhone"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/input_design"/>

    <LinearLayout
        android:id="@+id/linear_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
         android:layout_below="@+id/loginEnterPassword"
        android:layout_marginTop="5dp">

        <com.rey.material.widget.CheckBox
            android:id="@+id/rememberme_chbk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remember me"
            android:layout_marginLeft="60dp"
            android:textColor="@color/Primary"
            android:gravity="center_vertical"
            android:textSize="16sp"
            style="@style/Material.Drawable.CheckBox"
            android:layout_marginTop="5dp"
            app:cbd_strokeColor="@color/Primary"
            android:textStyle="bold|italic"
        />

        <TextView
            android:id="@+id/forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forget password?"
            android:textColor="@color/Primary"
            android:textSize="20dp"
            android:layout_marginLeft="45dp"
            android:textStyle="bold"
            android:layout_marginTop="5dp">

        </TextView>
    </LinearLayout>
    <Button
        android:id="@+id/login_btn"
        android:layout_width="362dp"
        android:layout_height="60dp"
        android:layout_below="@+id/linear_layout1"
        android:text="Login"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:background="@drawable/buttons"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin"
        android:textColor="@color/Primary"
        android:layout_below="@+id/login_btn"
        android:layout_alignParentEnd="true"

        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginRight="36dp"
        >

    </TextView>

    <TextView
        android:id="@+id/not_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not Admin"
        android:textColor="@color/Primary"
        android:layout_below="@+id/login_btn"
        android:layout_alignParentStart="true"
        android:textSize="20sp"
        android:layout_marginLeft="40dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        >

    </TextView>



</RelativeLayout>